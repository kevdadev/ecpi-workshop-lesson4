@{
    ViewData["Title"] = "Home Page";
}

      <h1>Add New Employee</h1>
        <form action="/Employee/AddNew/" method="POST">
            <label for="firstname">First Name</label>
            <input type="text" name="firstname" id="firstname" /> <br />
            <label for="lastname">Last Name</label>
            <input type="text" name="lastname" id="lastname" /> <br />
            <label for="emailaddress">Email Address</label>
            <input type="text" name="emailaddress" id="emailaddress" /> <br />
            <label for="phonenumber">Phone Number</label>
            <input type="text" name="phonenumber" id="phonenumber" /> <br />
            <label>Date Of Birth (mm - day - year)</label>          
            <input type="text" name="month" id="month" /> -
            <input type="text" name="day" id="day" /> - 
            <input type="text" name="year" id="year" /><br />
            <input type="submit" name="btnSubmit" id="btnSubmit" value="Add New Employee">
        </form>

        <a href="/Home/AddEmployee/">Add Employee </a>